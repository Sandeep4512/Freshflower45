 
<%- include('partials/header.ejs')   %>
<link rel="stylesheet"  href="/styles/nav.css" />
<script src="/javascript/nav.js"></script>
<link rel="stylesheet"  href="/styles/show.css" />
<p id="msgBox"></p>
<div class="showContainer">
    <div class="col2">
        <img  src="<%= sp.img %>" />
    </div>
    <div class="col1"> 
        <div class="desContainer">
              <div class="row">
                  <p><%=sp.name %></p>
                  <p>price: &#8377; <%=sp.price %> </p>
              </div>
              <p class="des"><b>Descripation :-</b><br/> <%= sp.des %></p>
        </div>
    </div>
    <div class="col1">
        <div class="action">
            <div class="row">
                <p>price :- </p>
                <p> &#8377; <%=sp.price %> </p>
            </div>
            <div class="row">
                <span>Status:-</span>
                <span style="color: rgb(7, 77, 7);"> In Stock !</span>
            </div>
            <div  style="margin-top: 10px;" class="row">
              <p style="margin-top:-4px;">qty:-</p>
              <select style="height: 20px;" onchange="selectQty(this)">
                  <% for(i=1;i<=sp.qtyInStock;i++){%>
                     <option value=<%= i %>><%= i %></option>
                  <%}%>
              </select>
            </div>
                <button type="button" onclick="addToCart()">Add to cart</button>
        </div>
     </div>
</div>

<script src="/javascript/show.js"></script>
<%- include('partials/footer.ejs')   %>