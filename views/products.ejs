<%- include('partials/header.ejs')   %>
<link rel="stylesheet"  href="/styles/nav.css" />
<link rel="stylesheet"  href="/styles/card.css" />
<script src="/javascript/nav.js"></script>


<h1 style="text-align: center; margin-top: 80px;">Our Product</h1>
<div class="container">
   <% productsArray.forEach(function(item){ %>
    <a href="/product/<%=item._id %>?id=<%=item._id %>">
        <div class="card">
            <div class="productContainer">
                <img  src="<%=item.img%>"  />
            </div>
            <div class="cardbody">
                <div class="row">
                    <h5><%= item.name%></h5>
                    <h5>price: &#8377;<%= item.price%> </h5>
                </div>
                <% var des=item.des.substring(0,85)%>
                <p style="font-size: 14px;color: black;">
                 <%= des %> ....
                 <a href="/product/<%=item._id %>?id=<%=item._id %>" style="color: blue;margin-left: 10px;">read more</a>
               </p>
            </div>
        </div>
    </a>
   <% }) %>
</div>
<%- include('partials/footer.ejs')   %>